@model TownRegistryASP.ViewModels.CitizenIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Citizens</h2>
<table class="table table-bordered table-hover" id="citizentable">
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Status</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        @{ 
            foreach (var citizen in Model.Citizens)
            {
                <tr>
                    <td>@citizen.FirstName</td>
                    <td>@citizen.LastName</td>
                    <td>@citizen.Status</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Citizens", new { id = citizen.CitizenID }, new { @class = "btn bg-warning" })
                        @Html.ActionLink("Delete", "Delete", "Citizens", new { id = citizen.CitizenID }, new { @class = "btn bg-danger", onclick = "return confirm('Are you sure you wish to delete this article?');" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="modal fade" id="DeleteModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">Delete Citizen</h3>
            </div>
            <div class="modal-body">
                <h4>Are you sure you want to delete this Citizen record?</h4>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                @*@Html.ActionLink("Delete", "Delete", "Citizens", new { id = citizen.CitizenID }, new { @class = "btn bg-danger" })*@
            </div>

        </div>

    </div>

</div>

<script>
    $(document).ready(function () {
        $('#citizentable').DataTable();

    });
    var ConfirmDelete = function () {
        $('#DeleteModal').modal('show');
    }
</script>

